<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- AI Agent Tree View -->
        <record id="view_ai_agent_tree" model="ir.ui.view">
            <field name="name">ai.agent.tree</field>
            <field name="model">ai.agent</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="name"/>
                    <field name="agent_type"/>
                    <field name="state"/>
                    <field name="total_tasks"/>
                    <field name="success_rate"/>
                    <field name="last_activity"/>
                </tree>
            </field>
        </record>

        <!-- AI Agent Form View -->
        <record id="view_ai_agent_form" model="ir.ui.view">
            <field name="name">ai.agent.form</field>
            <field name="model">ai.agent</field>
            <field name="arch" type="xml">
                <form>
                    <header>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <sheet>
                        <group>
                            <group>
                                <field name="name"/>
                                <field name="agent_type"/>
                                <field name="description"/>
                                <field name="active"/>
                            </group>
                            <group>
                                <field name="total_tasks"/>
                                <field name="success_rate"/>
                                <field name="avg_response_time"/>
                                <field name="last_activity"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Configuration">
                                <group>
                                    <field name="model_ids" widget="many2many_tags"/>
                                    <field name="capabilities"/>
                                    <field name="configuration"/>
                                </group>
                            </page>
                            <page string="MCP Integration">
                                <group>
                                    <field name="mcp_enabled"/>
                                    <field name="mcp_tools"/>
                                    <field name="mcp_resources"/>
                                </group>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- AI Agent Action -->
        <record id="action_ai_agent" model="ir.actions.act_window">
            <field name="name">AI Agents</field>
            <field name="res_model">ai.agent</field>
            <field name="view_mode">tree,form</field>
        </record>
    </data>
</odoo> 